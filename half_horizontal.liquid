<div class="view">
  <div class="layout grid">
    <div class="col--span-1 col gap--space-between py--1">
      <div class="item">
        <div class="meta"></div>
        <div class="content">
          <span class="value value--tnums">{{ total_pageviews | number_with_delimiter }}</span>
          <span class="label">Pageviews</span>
        </div>
      </div>
      <div class="border--h-5"></div>
      <div class="item">
        <div class="meta"></div>
        <div class="content">
          <span class="value value--tnums">{{ total_visitors | number_with_delimiter }}</span>
          <span class="label">Visitors</span>
        </div>
      </div>
    </div>

    <div id="{{ chart_id }}" class="col--span-3" style="width: 100%"></div>
  </div>

  {% render "title_bar", trmnl: trmnl %}
</div>

{% render "chart_script", pageviews: pageviews, chart_id: chart_id, chart_height: 180, x_axis_height: 155, x_axis_label_y: 10 %}
